{
  "version": 2,
  "builds": [
    {
      "src": "api/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "../dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/cron",
      "dest": "api/cron.ts"
    },
    {
      "src": "/api/trigger-scrape",
      "dest": "api/trigger-scrape.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 6 * * *"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "CRON_SECRET": "@cron_secret"
  }
}
